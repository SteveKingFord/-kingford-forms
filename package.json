{
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/build/dev.js",
    "build": "node scripts/build/build.js",
    "release": "node scripts/build/release.js",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "size": "node scripts/build/build.js jin runtime-dom size-check -p -f global",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "open": "open http://localhost:5000/packages/template-explorer/local.html",
    "test": "node scripts/build/build.js jin -f global -d && jest --runInBand",
    "test-dts": "node scripts/build/build.js shared reactivity runtime-core runtime-dom -dt -f esm-bundler && yarn test-dts-only",
    "test-dts-only": "tsc -p ./test-dts/tsconfig.json && tsc -p ./test-dts/tsconfig.build.json"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/build/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devEngines": {
    "node": "^12.17.0 || 13.x || 14.x || 15.x || 16.x"
  },
  "devDependencies": {
    "@babel/types": "^7.15.0",
    "@microsoft/api-extractor": "^7.18.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/hash-sum": "^1.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@types/puppeteer": "^5.4.4",
    "@typescript-eslint/parser": "^4.29.1",
    "brotli": "^1.3.2",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "csstype": "^3.0.8",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "puppeteer": "^10.2.0",
    "rollup": "~2.56.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semver": "^7.3.5",
    "serve": "^12.0.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "yorkie": "^2.0.0"
  },
  "jest": {
    "testRegex": "/packages/.*.test.js?$"
  }
}
